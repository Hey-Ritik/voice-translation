# Voice Translation Backend - Environment Variables
# Copy to .env and adjust as needed.

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS - comma-separated origins for frontend
# CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Whisper STT
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_CHUNK_LENGTH_S=10

# Translation: nllb (default) or openai
TRANSLATION_ENGINE=nllb
NLLB_MODEL=facebook/nllb-200-distilled-600M

# Optional: OpenAI for translation (set TRANSLATION_ENGINE=openai to use)
# OPENAI_API_KEY=sk-...

# Audio
SAMPLE_RATE=16000
CHUNK_DURATION_MS=2000
MIN_AUDIO_LENGTH_S=0.5
